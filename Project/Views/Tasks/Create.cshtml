@model KooliProjekt.Data.Tasks

@{
    ViewData["Title"] = "Create Task";
}

<h2>Create Task</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskStart" class="control-label"></label>
        <input asp-for="TaskStart" class="form-control" />
        <span asp-validation-for="TaskStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExpectedTime" class="control-label"></label>
        <input asp-for="ExpectedTime" class="form-control" />
        <span asp-validation-for="ExpectedTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectId" class="control-label"></label>
        <input asp-for="ProjectId" class="form-control" />
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AssignedUserId" class="control-label"></label>
        <input asp-for="AssignedUserId" class="form-control" />
        <span asp-validation-for="AssignedUserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InCharge" class="control-label"></label>
        <input asp-for="InCharge" class="form-control" />
        <span asp-validation-for="InCharge" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkDone" class="control-label"></label>
        <input asp-for="WorkDone" class="form-control" />
        <span asp-validation-for="WorkDone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

