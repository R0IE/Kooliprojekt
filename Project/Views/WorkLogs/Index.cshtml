@model IEnumerable<KooliProjekt.Data.WorkLogs>

@{
    ViewData["Title"] = "Work logs";
}

<h1>Work logs</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time cost</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.TimeCost</td>
                <td>@item.Description</td>
            </tr>
        }
    }
    </tbody>
</table>
