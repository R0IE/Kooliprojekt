@model List<KooliProjekt.Models.Beer>

<h2>Breweries</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No breweries found.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Name</td>
                <td>@b.BreweryType</td>
                <td>@(string.IsNullOrWhiteSpace(b.City) ? "" : b.City) @(string.IsNullOrWhiteSpace(b.State) ? "" : ", " + b.State) @(string.IsNullOrWhiteSpace(b.Country) ? "" : ", " + b.Country)</td>
            </tr>
        }
        </tbody>
    </table>
}
