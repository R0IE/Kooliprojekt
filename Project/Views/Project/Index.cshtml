@model PagedResult<KooliProjekt.Data.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Projects</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Project
                </a>
            </div>

            @if (!Model.Results.Any())
            {
                <div class="alert alert-info">
                    <h4>No Projects Found</h4>
                    <p>Get started by <a asp-action="Create">creating your first project</a>.</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var project in Model.Results)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">@project.ProjectName</h5>
                                    <span class="badge @(project.Deadline < DateTime.Now ? "bg-danger" : project.Deadline < DateTime.Now.AddDays(7) ? "bg-warning" : "bg-success")">
                                        @(project.Deadline < DateTime.Now ? "Overdue" : project.Deadline < DateTime.Now.AddDays(7) ? "Due Soon" : "On Track")
                                    </span>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <strong>Start:</strong> @project.Start.ToString("MM/dd/yyyy")<br>
                                        <strong>Deadline:</strong> @project.Deadline.ToString("MM/dd/yyyy")<br>
                                        <strong>Budget:</strong> $@project.Budget.ToString("N2")<br>
                                        <strong>Hourly Rate:</strong> $@project.HourlyRate.ToString("N2")
                                    </p>
                                    <div class="mt-3">
                                        <small class="text-muted">Team: @project.Team</small>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-outline-primary btn-sm">Details</a>
                                        <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.PageCount > 1)
                {
                    <nav aria-label="Projects pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.PageCount, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-route-page="@i">@i</a>
                                </li>
                            }

                            @if (Model.CurrentPage < Model.PageCount)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>